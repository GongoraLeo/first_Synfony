{% extends 'base.html.twig' %}

{% block title %}Listado de usuario{% endblock %}

{% block body %}
    <h1>Listado de usuario</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.id }}</td>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.apellido }}</td>
                <td>{{ usuario.edad }}</td>
                <td>
                    <a href="{{ path('app_usuario_show', {'id': usuario.id}) }}">Mostrar usuario</a>
                    <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}">Editar usuario</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no se han encontrado usuarios</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_usuario_new') }}">Crear nuevo usuario</a>
{% endblock %}
